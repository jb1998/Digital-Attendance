<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addinstance"
    android:padding="20dp">

    <TextView
        android:id="@+id/class_name"
        style="@style/textstyle"
        tools:text="Cse-1"/>

    <TextView
        android:id="@+id/subject"
        style="@style/textstyle"
        tools:text="subject:xxx"
        android:layout_marginBottom="40dp"/>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lecture_view"
        style="@style/cardstyle"
        android:padding="40dp"
        android:clickable="true"
        card_view:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                tools:text="12 January 2017"
                android:id="@+id/date"
                style="@style/textstyle"/>

            <TextView
                tools:text="8Am-9pm"
                android:id="@+id/time"
                style="@style/textstyle"
                android:layout_marginBottom="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/mark"
                    style="@style/textstyle"
                    tools:text="46"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:id="@+id/thumsup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/mark"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/unmark"
                    style="@style/textstyle"
                    android:layout_toRightOf="@id/thumsup"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    tools:text="6"/>
                <ImageView
                    android:id="@+id/thumsdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/unmark"
                    android:clickable="true"></ImageView>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/activity_round_button"
        android:text="+"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="160dp"
        android:clickable="true"
        />
</LinearLayout>