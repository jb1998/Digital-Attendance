<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.prathmeshranaut.attendancemsit.activities.SetUp">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/setup_view"
        style="@style/cardstyle"
        android:padding="40dp"
        android:clickable="true"
        card_view:cardCornerRadius="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/setup_class"
                style="@style/textstyle"
                tools:text="CSE_2"
                />
            <TextView
                android:id="@+id/setup_subject"
                style="@style/textstyle"
                tools:text="Subject:EM"
                />
            <TextView
                android:id="@+id/setup_students"
                style="@style/textstyle"
                tools:text="No of Students:60"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/button1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/activity_round_button"
        android:text="+"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="300dp"
        android:clickable="true"
        />
</LinearLayout>
