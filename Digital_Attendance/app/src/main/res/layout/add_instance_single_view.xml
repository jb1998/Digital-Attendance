<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="10dp"

    app:cardCornerRadius="15dp"

    app:cardElevation="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/date_textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:text="DATE"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/current_date_textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="current date"

                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:text="TIME"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/curremt_time_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="current time"

                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/no_of_presents_textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="30dp"

                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:id="@+id/thumsup"
                android:background="@drawable/ic_thumb_up_black_24dp" />

            <TextView
                android:id="@+id/no_of_absent_textView"
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:gravity="center"

                android:textSize="20dp" />
            <ImageButton
                android:layout_width="30dp"
                android:id="@+id/thumsdown"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_thumb_down_black_24dp" />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>